---
interface Props {
    name: string;
    url: string;
    isBig?: boolean
}

const {name, url, isBig = false} = Astro.props

const id = url.split('/').at(-2)

const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`

---
<a href={`/pokemons/${name}`} 
class:list={[
    'flex flex-col justify-center items-center p-2',
    {
        ['bg-slate-500 rounded']: !isBig,
    }
]}>
    <img
    transition:name={`${name}-image`}
    src={imageSrc} alt={name} class:list={[
        {
            'w-18 h-18': !isBig,
            'w-26 h-26': isBig,
        }
    ]} 
    alt={name}
    />

    <span class:list={["capitalize", {
        'text-4xl text-blue-300': isBig,
    }]}>#{id} {name}</span>
</a>